@model ConfirmMailViewModel

@{
    Layout = null;
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class ="container">
    <br />
    <br />
    <form method="post">
        <h2>Tasinan mail adresi : @ViewBag.v</h2>
        <br />
        <label>Kullanici ID degeri </label>
        <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v" />
        <label>Mail adresinize gelen 6 hanelik kodu giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
        <br />
        <button class="btn btn-primary">Hesabi Aktiflestirin</button>
    </form>
</div>